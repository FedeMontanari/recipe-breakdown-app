generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Ingredient {
  id       Int     @id @default(autoincrement())
  slug     String
  name     String
  price    Float
  Recipe   Recipe? @relation(fields: [recipeId], references: [id])
  recipeId Int?
}

model Recipe {
  id              Int          @id @default(autoincrement())
  slug            String
  name            String
  ingredientsList Ingredient[]
}
